{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "type": "cargo",
      "command": "run",
      "args": ["--bin", "app", "-F", "livereload"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cargo",
      "command": "test",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "rust: cargo test"
    }
  ]
}
